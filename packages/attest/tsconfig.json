{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "./dist",
    "**/__tests__"
  ]
}
